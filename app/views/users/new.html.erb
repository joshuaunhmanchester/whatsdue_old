<div id="layout">
    <div id="header">
        <span id="title">
            <h1><a class="header" href="/">What's Due</a></h1>
        </span>
        <span id="welcome">
        <span class="button teal small"><a href="/signup">Register</a></span>
        <span class="button teal small"><a href="/login">Sign In</a></span>
        </span>
    </div>
    <div id="clear"></div>
    <div id="main">
        <%= form_for @user do |f| %>
            <% if @user.errors.any? %>
                <div class="error_messages">
                    <h2>Form is invalid</h2>
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <div class="form-wrapper">
                <h2>Sign Up and Get Started!</h2>
                <div class="field">
                    <label>First Name</label>
                    <%= f.text_field :first_name %>
                </div>
                <div class="field">
                    <label>Last Name</label>
                    <%= f.text_field :last_name %>
                </div>
                <div class="field">
                    <label>Email (username)</label>
                    <%= f.text_field :email %>
                </div>
                <div class="field">
                    <label>School Name</label>
                    <%= f.text_field :school_name %>
                </div>
                <div class="field">
                    <label>Password</label>
                    <%= f.password_field :password %>
                </div>
                <div class="field">
                    <label>Confirm Password</label>
                    <%= f.password_field :password_confirmation %>
                </div>
                <div class="field">
                    <%= f.submit "Sign Up", :class => "button submit teal large" %>
                </div>
            </div>
        <% end %>
    </div>
</div>