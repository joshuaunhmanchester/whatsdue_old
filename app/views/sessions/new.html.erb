<h1>Log In</h1>
<% flash.each do |k, v| %>
  <div class="<%= k %>"><%= v %></div>
<% end %>
<%= form_tag sessions_path do %>
  <div class="field">
  	<label>Email</label><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
  	<label>Password</label><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log In" %></div>
<% end %>